@model IEnumerable<ElmiraFireRecall.Models.PhoneProvider>

@{
    ViewData["Title"] = "Manage Phone Providers";
    ViewData["IsIndex"] = true;
}

<partial name="_PageHeaderPartial" />
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Provider
            </th>
            <th>
                Text Message Email Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <strong></strong>@($"@{item.EmailSuffix}")
            </td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
