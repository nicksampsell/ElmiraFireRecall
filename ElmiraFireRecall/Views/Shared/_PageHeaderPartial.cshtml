<div class="mb-3">
    <div class="row">
        <div class="col d-flex flex-row align-items-center justify-content-between">
            <h1>@ViewData["Title"]</h1>

            @if(!ViewData.ContainsKey("HideButtons"))
            {
                @if(!ViewData.ContainsKey("IsIndex"))
                {
                    <a asp-action="Index" class="btn btn-primary">Return to List</a>
                }
                else
                {
                    <a asp-action="Create" class="btn btn-primary">Create</a>
                }
            }
        </div>
    </div>
    <div class="row">
        <div class="col">
            @if (TempData.ContainsKey("Error") || TempData.ContainsKey("error"))
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Error"]?.ToString()
                </div>
            }

            @if (TempData.ContainsKey("Success") || TempData.ContainsKey("success"))
            {
                <div class="alert alert-success" role="alert">
                    @TempData["Success"]?.ToString()
                </div>
            }
        </div>
    </div>
</div>